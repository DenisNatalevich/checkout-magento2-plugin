<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
           <checkout_com>
                <title>Credit Card (Checkout.com)</title>
                <active>1</active>
                <php_logging>0</php_logging>
                <js_logging>0</js_logging>
                <gateway_logging>0</gateway_logging>
                <order_creation>after_auth</order_creation>
                <new_order_status>pending</new_order_status>
                <model>CheckoutCom\Magento2\Model\Methods\DefaultMethod</model>
                <payment_action>authorize_capture</payment_action>   
                <order_creation>after_auth</order_creation>
                <new_order_status>pending</new_order_status>
                <order_status_authorized>pending_payment</order_status_authorized>
                <order_status_captured>processing</order_status_captured>
                <order_status_flagged>fraud</order_status_flagged>
                <order_comments_override>1</order_comments_override>
                <payment_currency>base_currency</payment_currency>
                <custom_currency>USD</custom_currency>
                <accepted_currencies>USD</accepted_currencies>
                <verify_3dsecure>0</verify_3dsecure>
                <attemptN3D>0</attemptN3D>
                <auto_generate_invoice>1</auto_generate_invoice>
                <theme_color>#00b660</theme_color>
                <box_title>Checkout.com</box_title>
                <box_subtitle>Hosted Payment</box_subtitle>
                <logo_url><![CDATA[https://cdn.checkout.com/img/checkout-logo-online-payments.jpg]]></logo_url>
                <button_label>Pay Now</button_label>
                <payment_mode>cards</payment_mode>
                <embedded_theme>standard</embedded_theme>
                <environment>sandbox</environment>
                <integration>hosted</integration>
                <auto_capture>0</auto_capture>
                <auto_capture_time>0.02</auto_capture_time>
                <public_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <secret_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <private_shared_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <sandbox_api_url><![CDATA[https://sandbox.checkout.com/api2/v2/]]></sandbox_api_url>
                <live_api_url><![CDATA[https://api2.checkout.com/v2/]]></live_api_url>
                <sandbox_embedded_url><![CDATA[https://cdn.checkout.com/js/frames.js]]></sandbox_embedded_url>
                <live_embedded_url><![CDATA[https://cdn.checkout.com/js/frames.js]]></live_embedded_url>
                <embedded_css><![CDATA[https://cdn.checkout.com/v2/js/css/theme-template.css]]></embedded_css>
                <sandbox_hosted_url><![CDATA[https://secure1.checkout.com/sandbox/payment/]]></sandbox_hosted_url>
                <live_hosted_url><![CDATA[https://secure1.checkout.com/payment/]]></live_hosted_url>
                <sort_order>1</sort_order>
                <save_card_check_amount>1.00</save_card_check_amount>
                <save_card_check_currency>USD</save_card_check_currency>
            </checkout_com>            
            <checkout_com_admin>
                <title>Credit Card (Checkout.com)</title>
                <active>1</active>
                <model>CheckoutCom\Magento2\Model\Methods\AdminMethod</model>
                <debug>0</debug>
                <moto_auto_capture>0</moto_auto_capture>
                <moto_auto_capture_time>0</moto_auto_capture_time>
            </checkout_com_admin>
            <checkout_com_applepay>
                <title>Credit Card (Checkout.com Apple Pay)</title>
                <active>1</active>
                <model>CheckoutCom\Magento2\Model\Methods\ApplePayMethod</model>
                <debug>0</debug>
                <sort_order>1</sort_order>
            </checkout_com_applepay>
            <checkout_com_vault>
                <model>CheckoutComCreditCardVaultFacade</model>
                <title>Stored Cards (Checkout.com)</title>
                <autosave>1</autosave>
            </checkout_com_vault>
        </payment>
        <conf>
            <param>
                <modtag>checkout_com</modtag>
                <modtagapplepay>checkout_com_applepay</modtagapplepay>
                <modname>CheckoutCom_Magento2</modname>
                <modlabel>Checkout.com</modlabel>
                <modurl><![CDATA[https://www.checkout.com]]></modurl>
                <modlogo><![CDATA[https://cdn.checkout.com/img/checkout-logo-online-payments.jpg]]></modlogo>
           </param>
        </conf>
    </default>
</config>
